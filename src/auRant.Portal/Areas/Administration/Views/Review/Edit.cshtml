@model auRant.Visual.Models.ReviewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<table class="table-admin">
    @using (Html.BeginForm("Edit", "Review", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        <tr>
            <td>
                Product
            </td>
            <td>
                @Html.DropDownList("ProductId", (SelectList)ViewBag.ProductList)
                @Html.HiddenFor(model => model.IdOriginal);
                @Html.ValidationMessageFor(model => model.ProductModel.ID)
                @Html.HiddenFor(model => model.IsDraft)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.ReviewText)
            </td>
            <td>@Html.TextAreaFor(model => model.ReviewText)
                @Html.ValidationMessageFor(model => model.ReviewText)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Save" />
            </td>
        </tr>
            
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
