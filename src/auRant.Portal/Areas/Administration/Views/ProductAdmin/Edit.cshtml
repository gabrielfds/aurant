@model auRant.Visual.Models.ProductModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "ProductAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-container">
        <table>
            <tr>
                <td>@Html.LabelFor(model => model.Name)
                </td>
                <td>
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
            </tr>
             <tr>
                <td>@Html.LabelFor(model => model.ShortDescription)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.ShortDescription)
                    @Html.ValidationMessageFor(model => model.ShortDescription)
                </td>
            </tr>
             <tr>
                <td>@Html.LabelFor(model => model.FullDescription)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.FullDescription)
                    @Html.ValidationMessageFor(model => model.FullDescription)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.ManufactorId)
                </td>
                <td>@Html.DropDownList("ManufactorId", (SelectList)ViewBag.Manufactor)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.CategoryId)
                </td>
                <td>@Html.DropDownList("CategoryId", (SelectList)ViewBag.Categories)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.StatusId)
                </td>
                <td>@Html.DropDownList("StatusId", (SelectList)ViewBag.ProductStatus)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Price)
                </td>
                <td>
                    @Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.urlImage)
                </td>
                <td>
                    <input type="file" id="ImageFile"  name="ImageFile"/><span>Imagem atual: @Model.urlImage</span>
                    <input type="hidden" name="FileImage" id="FileImage"  value="@Model.urlImage" />
                    @Html.ValidationMessageFor(model => model.urlImage)
                </td>
            </tr>
            <tr><td><input type="submit" value="Update" /></td><td>@Html.ActionLink("Back to List", "Index")</td></tr>
             
        </table>
    </div>
}
